{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<section class="min-vh-100 gradient-custom d-flex align-items-center justify-content-center">
  <div class="container custom-container">
    <div class="row d-flex justify-content-center">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class="mb-md-5 mt-md-4 pb-5">
              <h2 class="fw-bold mb-2 text-uppercase">S'inscrire</h2>
              <p class="text-white-50 mb-5">Veuillez entrer vos informations pour créer un compte !</p>

              {{ form_start(registrationForm, {'attr': {'class': 'signup-form', 'novalidate': 'novalidate'}}) }}

              <div class="form-outline form-white mb-4">
                {{ form_row(registrationForm.fullName, {'attr': {'class': 'form-control form-control-lg', 'id': 'fullName'}, 'label': 'Nom complet:'}) }}
                <div class="invalid-feedback">Le nom complet est requis.</div>
              </div>

              <div class="form-outline form-white mb-4">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control form-control-lg', 'id': 'email'}, 'label': 'Adresse email:'}) }}
                <div class="invalid-feedback">Veuillez entrer une adresse email valide.</div>
              </div>

              <div class="form-outline form-white mb-4">
                {{ form_row(registrationForm.plainPassword.first, {
                    'label': 'Mot de passe:',
                    'attr': {'class': 'form-control form-control-lg', 'id': 'password'}
                }) }}
                <div class="invalid-feedback">Le mot de passe est requis.</div>
                <div class="power-container">
                  <div id="power-point" style="height: 0.75rem; width: 1%; background-color: grey; border-radius: 3rem; transition: all 0.375s;"></div>
                </div>
              </div>

              <div class="form-outline form-white mb-4">
                {{ form_row(registrationForm.plainPassword.second, {
                    'label': 'Confirmer le mot de passe:',
                    'attr': {'class': 'form-control form-control-lg', 'id': 'confirm-password'}
                }) }}
                <div class="invalid-feedback">Les mots de passe ne correspondent pas.</div>
              </div>

              <div class="form-check mb-3">
                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input', 'id': 'agreeTerms'}}) }}
                <label class="form-check-label" for="agreeTerms">
                  Accepter les conditions d'utilisation
                </label>
                <div class="invalid-feedback">Vous devez accepter les conditions d'utilisation.</div>
              </div>

              <button type="submit" class="btn btn-outline-light btn-lg px-5">S'inscrire</button>
              <a href="{{ path('app_login') }}" class="btn btn-outline-secondary btn-lg px-5">Se connecter</a>

              {{ form_end(registrationForm) }}

            </div>

            <div>
              <p class="mb-0">Déjà inscrit(e) ? <a href="{{ path('app_login') }}" class="text-white-50 fw-bold">Se connecter</a></p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="{{ asset('js/register.js') }}" defer></script>
{% endblock %}
